<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.HBox?>
<BorderPane styleClass="main-container" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.timemachine.ui.App">
  <left>
    <VBox fx:id="left" styleClass="left" alignment="TOP_CENTER"  xmlns:fx="http://javafx.com/fxml">
      <ToggleButton  text="备份目录"  styleClass="menu-button,menu-button-select" onAction="#onHelloButtonClick" onMouseClicked="#onMenuButtonClick" />
      <ToggleButton  text="日志"  styleClass="menu-button" onAction="#onHelloButtonClick" onMouseClicked="#onMenuButtonClick" />
      <ToggleButton  text="设置"  styleClass="menu-button" onAction="#onHelloButtonClick" onMouseClicked="#onMenuButtonClick"/>
    </VBox>
  </left>
  <center>
    <HBox styleClass="file-list">
      <VBox HBox.hgrow="ALWAYS">
        <ListView  fx:id="listView" styleClass="custom-list-view" VBox.vgrow="ALWAYS">
          <items>
            <!-- 添加数据项 -->
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="Item 1" />
              <String fx:value="Item 2" />
              <String fx:value="Item 3" />
              <String fx:value="Item 4" />
              <String fx:value="Item 5" />
            </FXCollections>
          </items>
        </ListView>
<!--        <ListView fx:id="listView" styleClass="custom-list-view" VBox.vgrow="ALWAYS" />-->
      </VBox>
      <VBox  prefWidth="110" alignment="TOP_RIGHT" spacing="10">
        <Button text="新建" styleClass="btn" />
        <Button text="编辑" styleClass="btn" />
        <Button text="浏览" styleClass="btn" />
        <Button text="删除" styleClass="btn" />
      </VBox>
    </HBox>
  </center>
</BorderPane>
